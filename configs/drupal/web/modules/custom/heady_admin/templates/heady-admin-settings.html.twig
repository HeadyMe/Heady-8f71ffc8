  <nav class="heady-admin-nav">
    <div class="heady-admin-logo"><span class="heady-admin-logo-icon">ğŸŒŸ</span><span>Heady Admin</span></div>
    <div class="heady-admin-tabs">
      <a href="{{ path('heady_admin.dashboard') }}" class="heady-tab">ğŸ“Š Dashboard</a>
      <a href="{{ path('heady_admin.services') }}" class="heady-tab">ğŸ”Œ Services</a>
      <a href="{{ path('heady_admin.hcfp') }}" class="heady-tab">ğŸ›¡ï¸ HCFP</a>
      <a href="{{ path('heady_admin.headylens') }}" class="heady-tab">ğŸ”­ HeadyLens</a>
      <a href="{{ path('heady_admin.customize') }}" class="heady-tab">ğŸ¨ Customize</a>
      <a href="{{ path('heady_admin.access_control') }}" class="heady-tab">ğŸ‘¥ Access</a>
      <a href="{{ path('heady_admin.settings') }}" class="heady-tab active">âš™ï¸ Settings</a>
    </div>
  </nav>

  <div class="heady-customize-grid">
    <div class="heady-card">
      <h3 style="margin-bottom:1rem;">Connection Settings</h3>
      <div class="heady-form-group">
        <label class="heady-form-label">Manager URL</label>
        <input type="text" class="heady-form-input" value="{{ config.manager_url }}">
      </div>
      <div class="heady-form-group">
        <label class="heady-form-label">WebSocket Port</label>
        <input type="number" class="heady-form-input" value="{{ config.websocket_port }}">
      </div>
      <div class="heady-form-group">
        <label class="heady-form-label">Colab GPU Endpoint (optional)</label>
        <input type="text" class="heady-form-input" value="{{ config.colab_url }}" placeholder="https://xyz.trycloudflare.com/api/chat">
      </div>
    </div>

    <div class="heady-card">
      <h3 style="margin-bottom:1rem;">Managed Domains</h3>
      {% for domain in config.domains %}
        <div style="display:flex;align-items:center;justify-content:space-between;padding:0.4rem 0;border-bottom:1px solid rgba(71,85,105,0.2);">
          <span>{{ domain }}</span>
          <span class="heady-status-badge status-online">Active</span>
        </div>
      {% endfor %}
      <button class="heady-btn heady-btn-secondary" style="margin-top:0.75rem;">+ Add Domain</button>
    </div>

    <div class="heady-card">
      <h3 style="margin-bottom:1rem;">Deployment</h3>
      <div class="heady-form-group">
        <label class="heady-toggle"><input type="checkbox" checked><span>Auto-deploy on commit</span></label>
      </div>
      <div class="heady-form-group">
        <label class="heady-toggle"><input type="checkbox" checked><span>Production mode</span></label>
      </div>
      <div class="heady-form-group">
        <label class="heady-toggle"><input type="checkbox"><span>Debug logging</span></label>
      </div>
      <div style="margin-top:1rem;">
        <button class="heady-btn heady-btn-primary">ğŸ’¾ Save Settings</button>
      </div>
    </div>
  </div>
</div>
