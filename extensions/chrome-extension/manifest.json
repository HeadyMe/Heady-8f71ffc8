{
    "manifest_version": 3,
    "name": "Heady AI â€” Brain in Every Tab",
    "short_name": "Heady",
    "version": "1.0.0",
    "description": "AI assistant powered by the Heady Intelligence Layer. Chat, code, analyze, and create from any webpage. 9 service groups, 77 AI nodes.",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "sidePanel"
    ],
    "host_permissions": [
        "https://headyme.com/*",
        "http://127.0.0.1:3301/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/heady-16.png",
            "48": "icons/heady-48.png",
            "128": "icons/heady-128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/heady-16.png",
        "48": "icons/heady-48.png",
        "128": "icons/heady-128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+H",
                "mac": "Command+Shift+H"
            },
            "description": "Open Heady"
        }
    }
}