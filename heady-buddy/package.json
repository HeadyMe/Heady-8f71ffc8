{
  "name": "heady-buddy",
  "version": "1.0.0",
  "description": "Heady Buddy - Cross-Device Companion + Admin/IDE Launcher",
  "main": "src/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "electron-builder",
    "package": "npm run build && electron-builder --publish=never",
    "package:win": "npm run build && electron-builder --win --publish=never",
    "package:mac": "npm run build && electron-builder --mac --publish=never",
    "package:linux": "npm run build && electron-builder --linux --publish=never",
    "install:chrome-extension": "web-ext build --source-dir=extension/chrome --artifacts-dir=dist/chrome-extension",
    "install:firefox-extension": "web-ext build --source-dir=extension/firefox --artifacts-dir=dist/firefox-extension",
    "build:pwa": "npm run build:vite && npx pwa-assets-generator",
    "deploy:pwa": "npm run build:pwa && firebase deploy --only hosting"
  },
  "dependencies": {
    "electron": "^35.7.5",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "lucide-react": "^0.474.0",
    "axios": "^1.7.9",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "vite": "^6.1.0",
    "electron-builder": "^26.8.1",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1",
    "web-ext": "^8.3.0",
    
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  },
  "build": {
    "appId": "com.headysystems.heady-buddy",
    "productName": "Heady Buddy",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    }
  },
  "author": "HeadySystems Inc.",
  "license": "MIT"
}
