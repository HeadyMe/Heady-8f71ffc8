# HeadySystems Environment Example
# Copy to .env.local and configure for your mini computer

# API Configuration
REACT_APP_API_URL=http://your-mini-computer.local:3300
REACT_APP_WS_URL=ws://your-mini-computer.local:3300

# Service URLs
API_URL=http://your-mini-computer.local:3300
WEB_URL=http://your-mini-computer.local:3000
CMS_URL=http://your-mini-computer.local:8080

# Database Configuration
DB_HOST=192.168.1.100
DB_PORT=5432
DB_NAME=headysystems
DB_USER=postgres
DB_PASS=your-password

# Redis Configuration
REDIS_HOST=192.168.1.100
REDIS_PORT=6379

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_DEBUG_MODE=true
NODE_ENV=development

# Mini Computer Configuration
MINI_COMPUTER_HOST=your-mini-computer.local
MINI_COMPUTER_IP=192.168.1.100
DEPLOYMENT_TARGET=mini_computer