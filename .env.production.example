# === Heady Production Configuration Template ===
# Copy this file to .env.production and fill in your actual values

NODE_ENV=production
HEADY_ENV=production
PORT=3310

# === Database Configuration ===
DATABASE_URL=postgresql://username:password@your-db-host:5432/database_name
REDIS_URL=redis://your-redis-host:6379

# === API Security ===
HEADY_API_KEY=generate-secure-random-key-here
ADMIN_TOKEN=generate-secure-admin-token-here
HF_TOKEN=your_huggingface_token_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# === Production Domains ===
HEADY_DOMAIN_SCHEME=your-domain.com
HEADY_BASE_URL=https://your-manager-domain.com:3300
HEADY_FRONTEND_URL=https://your-app-domain.com:3000
HEADY_ADMIN_URL=https://your-manager-domain.com:3300/admin-ui.html
HEADY_BUDDY_URL=https://your-chat-domain.com
HEADY_WEB_URL=https://your-app-domain.com:3000
HEADY_MCP_URL=https://your-api-domain.com

# === Cloud Endpoints ===
CLOUD_HEADY_ME_URL=https://your-cloud-domain.com
CLOUD_HEADY_SYSTEMS_URL=https://your-cloud-domain.com
CLOUD_HEADY_CONNECTION_URL=https://your-cloud-domain.com

# === HeadySoul Configuration ===
HEADYSOUL_ENABLED=true
HEADYSOUL_ESCALATION_THRESHOLD=70
HEADYBATTLE_MODE_ENABLED=true
HEADYBATTLE_DEFAULT_MODE=exploratory

# === Claude Integration ===
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=8192

# === Resource Limits ===
MAX_CONCURRENT_TASKS=12
JULES_ENABLED=true
OBSERVER_ENABLED=true
BUILDER_ENABLED=true
ATLAS_ENABLED=true
PYTHIA_ENABLED=true
SOCRATES_ENABLED=true

# === Service URLs ===
API_GATEWAY_URL=https://your-api-domain.com
WEB_DASHBOARD_URL=https://your-admin-domain.com/admin-ui.html
BUDDY_CHAT_URL=https://your-chat-domain.com
STORY_DRIVER_URL=https://your-api-domain.com
LENS_MONITORING_URL=https://your-monitoring-domain.com
