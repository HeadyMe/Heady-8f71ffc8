{
  "name": "headybuddy-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "HeadyBuddy Desktop Overlay â€” Electron shell for always-on-top companion widget",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev --prefix ../headybuddy\" \"wait-on http://localhost:3400 && electron .\"",
    "build": "npm run build --prefix ../headybuddy && electron-builder",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^40.2.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.headysystems.headybuddy",
    "productName": "HeadyBuddy",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "tray-icon.png"
    ],
    "extraResources": [
      {
        "from": "../headybuddy/dist",
        "to": "widget"
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icons/icon.png",
      "category": "Utility"
    }
  }
}
